{
    "name": "durable-agent",
    "image": "mcr.microsoft.com/devcontainers/dotnet:dev-10.0-noble",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/azure-cli": {
            "version": "latest",
            "installBicep": true
        },
        "ghcr.io/devcontainers/features/github-cli": {
            "version": "latest",
            "extensions": [
                "github/gh-aw"
            ]
        },
        "ghcr.io/azure/azure-dev/azd": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/node": {
            "version": "lts"
        },
        "ghcr.io/jlaundry/devcontainer-features/azure-functions-core-tools": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/copilot-cli": {
            "version": "latest"
        }
    },
    "containerEnv": {
        "DOTNET_ENVIRONMENT": "Development",
        "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-azure-github-copilot",
                "azurite.azurite",
                "csharpfritz.squadui",
                "codezombiech.gitignore",
                "github.vscode-github-actions",
                "humao.rest-client",
                "ms-azuretools.vscode-bicep",
                "ms-azuretools.vscode-azurefunctions",
                "ms-dotnettools.csdevkit",
                "ms-windows-ai-studio.windows-ai-studio",
                "vstirbu.vscode-mermaid-preview",
                "microsoft-aspire.aspire-vscode"
            ],
            "settings": {
                "remote.autoForwardPorts": true,
                "remote.autoForwardPortsSource": "hybrid",
                "remote.portsAttributes": {
                    "15*": {
                        "label": "Aspire Dashboard",
                        "onAutoForward": "notify"
                    },
                    "18*": {
                        "label": "Aspire OTLP",
                        "onAutoForward": "ignore"
                    }
                },
                "remote.otherPortsAttributes": {
                    "onAutoForward": "silent"
                }
            }
        }
    },
    "forwardPorts": [
        5012,
        7071
    ],
    "portsAttributes": {
        "5012": {
            "label": "DurableAgent.Web (ASP.NET)",
            "onAutoForward": "notify"
        },
        "7071": {
            "label": "DurableAgent.Functions (Azure Functions)",
            "onAutoForward": "notify"
        }
    },
    // "postCreateCommand": "npx github:bradygaster/squad && npx skills add spboyer/sensei && curl -sSL https://aspire.dev/install.sh | bash",
    "onCreateCommand": "curl -sSL https://aspire.dev/install.sh | bash",
    "postStartCommand": "dotnet dev-certs https --trust && dotnet build ./source/DurableAgent.slnx",
    // "runArgs": [
    //     "--network=host"
    // ]
}