@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="decorative-scoop">🍦 🍨 🍧</div>
    <h1 class="display-4">Welcome to Froyo Foundry!</h1>
    <p class="lead">Where Every Scoop is a Delight!</p>
    <p>We value your feedback and want to make your frozen yogurt experience unforgettable.</p>
    <a asp-page="/Feedback" class="froyo-btn-primary mt-3">Share Your Feedback</a>
</div>

<div class="row text-center mt-4">
    <div class="col-md-4">
        <div class="decorative-scoop">🍓</div>
        <h3 class="froyo-heading">Fresh Flavors</h3>
        <p>Made with real fruit and premium ingredients</p>
    </div>
    <div class="col-md-4">
        <div class="decorative-scoop">😊</div>
        <h3 class="froyo-heading">Happy Customers</h3>
        <p>Your satisfaction is our top priority</p>
    </div>
    <div class="col-md-4">
        <div class="decorative-scoop">⭐</div>
        <h3 class="froyo-heading">Quality Service</h3>
        <p>Delivering excellence in every visit</p>
    </div>
</div>
